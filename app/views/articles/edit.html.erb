<h1>Edit Articles</h1>

<% if @article.errors.any? %>
<h2>The floowing event prevented the article form created!</h2>
<ul>
  <% @article.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
</ul>
<% end %>

<%= form_for @article do |i|%>
  
  <p>
    <%= i.label :title %>
    <%= i.text_field :title %>
  </p
  <p>
    <%= i.label :description %>
    <%= i.text_area :description %>
  </p>
  <p>
    <%= i.submit %>
  </p>

<%end%>

<%= link_to "Back<<", articles_path %>